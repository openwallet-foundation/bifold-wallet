    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^7.0.0",
    "lint-staged": "^15.5.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.18.0"
  },
